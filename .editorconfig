root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{js,json,vue,html,css,conf,yml,md}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[**/frontend/node_modules/**]
indent_style = ignore
indent_size = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore
